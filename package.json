{
  "name": "changelog-test",
  "version": "2.1.0",
  "description": "草梅友仁测试生成日志用项目",
  "author": "CaoMeiYouRen",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "release": "cross-env DEBUG=conventional-changelog:* semantic-release",
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js",
    "build": "rimraf dist && tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "rm": "rimraf node_modules",
    "watch": "tsc -w",
    "start": "node ./dist/index",
    "prepare": "husky install",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.7",
    "@types/node": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cmyr-config": "^2.1.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog-cmyr": "^1.0.0",
    "debug": "^4.3.3",
    "eslint": "^7.32.0",
    "eslint-config-cmyr": "^1.1.14",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=12"
  },
  "homepage": "https://github.com/CaoMeiYouRen/changelog-test#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/changelog-test.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/changelog-test/issues"
  },
  "changelog": {
    "language": "zh",
    "settings": {
      "docs": {
        "title": "📝 文档",
        "enable": true
      },
      "style": {
        "title": "💄 风格",
        "enable": true
      },
      "test": {
        "title": "✅ 测试",
        "enable": true
      },
      "build": {
        "title": "👷‍ 构建",
        "enable": true
      },
      "ci": {
        "title": "🔧 CI 配置",
        "enable": true
      },
      "chore": {
        "title": "🎫 其他更新",
        "enable": false
      }
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-cmyr"
    }
  }
}
